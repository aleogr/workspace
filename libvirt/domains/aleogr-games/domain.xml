<domain type="kvm">
	<name>win11-games</name>
  	# Gerar um uuid com o comando uuidgen
	<uuid>???</uuid>
	<metadata>
		<libosinfo:libosinfo
			xmlns:libosinfo="http://libosinfo.org/xmlns/libvirt/domain/1.0">
			<libosinfo:os id="http://microsoft.com/win/11"/>
		</libosinfo:libosinfo>
	</metadata>
	<os>
		<type arch="x86_64" machine="q35">hvm</type>
		<loader readonly="yes" secure="yes" type="pflash">/usr/share/edk2/x64/OVMF_CODE.secboot.4m.fd</loader>
		<nvram template="/usr/share/edk2/x64/OVMF_VARS.4m.fd" templateFormat="raw" format="raw">/var/lib/libvirt/qemu/nvram/win11-games_VARS.fd</nvram>
		<boot dev="hd"/>
		<boot dev="cdrom"/>
		<bootmenu enable="yes"/>
	</os>
	<pm>
		<suspend-to-mem enabled="no"/>
		<suspend-to-disk enabled="no"/>
	</pm>
	<memory>33554432</memory>
	<currentMemory>33554432</currentMemory>
	<numatune>
		<memory mode="preferred" nodeset="0"/>
	</numatune>
	<vcpu placement="static">14</vcpu>
	<iothreads>2</iothreads>
	<cpu mode="host-passthrough" check="none" migratable="on">
		<topology sockets="1" dies="1" cores="7" threads="2"/>
		<cache mode="passthrough"/>
		<feature policy="require" name="apic"/>
		<feature policy="require" name="hypervisor"/>
		<feature policy="require" name="invtsc"/>
	</cpu>
	<cputune>
		<vcpupin vcpu="0" cpuset="0"/>
		<vcpupin vcpu="1" cpuset="7"/>
		<vcpupin vcpu="2" cpuset="1"/>
		<vcpupin vcpu="3" cpuset="8"/>
		<vcpupin vcpu="4" cpuset="2"/>
		<vcpupin vcpu="5" cpuset="9"/>
		<vcpupin vcpu="6" cpuset="3"/>
		<vcpupin vcpu="7" cpuset="10"/>
		<vcpupin vcpu="8" cpuset="4"/>
		<vcpupin vcpu="9" cpuset="11"/>
		<vcpupin vcpu="10" cpuset="5"/>
		<vcpupin vcpu="11" cpuset="12"/>
		<vcpupin vcpu="12" cpuset="6"/>
		<vcpupin vcpu="13" cpuset="13"/>
		<iothreadpin iothread="1" cpuset="16-17"/>
		<iothreadpin iothread="2" cpuset="18-19"/>
		<emulatorpin cpuset="20-23"/>
	</cputune>
	<clock offset="localtime">
		<timer name="rtc" tickpolicy="catchup"/>
		<timer name="pit" tickpolicy="delay"/>
		<timer name="hpet" present="no"/>
		<timer name="hypervclock" present="yes"/>
	</clock>
	<features>
		<acpi/>
		<apic/>
		<hyperv>
			<relaxed state="on"/>
			<vapic state="on"/>
			<spinlocks state="on" retries="8191"/>
			<vpindex state="on"/>
			<synic state="on"/>
			<stimer state="on"/>
			<reset state="on"/>
			<vendor_id state="on" value="GameSafeHv"/>
			<frequencies state="on"/>
		</hyperv>
		<kvm>
			<hidden state="on"/>
		</kvm>
		<vmport state="off"/>
		<smm state="on"/>
		<ioapic driver="kvm"/>
	</features>
	<devices>
		<emulator>/usr/bin/qemu-system-x86_64</emulator>
		<tpm model="tpm-tis">
			<backend type="emulator" version="2.0"/>
		</tpm>
		<disk type="file" device="disk">
			<driver name="qemu" type="qcow2"/>
			<source file="/var/lib/libvirt/images/win11-games.qcow2"/>
			<target dev="vda" bus="virtio"/>
		</disk>
		<disk type="file" device="cdrom">
			<driver name="qemu" type="raw"/>
			<source file="/home/aleogr/Downloads/Imagens ISO/Windows 11 24H2.iso"/>
			<target dev="sdb" bus="sata"/>
			<readonly/>
		</disk>
		<disk type="file" device="cdrom">
			<driver name="qemu" type="raw"/>
			<source file="/home/aleogr/Downloads/Imagens ISO/virtio-win-0.1.229.iso"/>
			<target dev="sdc" bus="sata"/>
			<readonly/>
		</disk>
		<interface type="network">
			<source network="network"/>
			<mac address="52:54:00:a4:c7:c5"/>
			<model type="e1000e"/>
		</interface>
		<console type="pty"/>
		<sound model="ich9"/>
		<input type="evdev">
			<source dev="/dev/input/by-id/usb-Logitech_USB_Receiver-if02-event-mouse"/>
		</input>
		<input type="evdev">
			<source dev="/dev/input/by-id/usb-Primax_Dell_KB216_Wired_Keyboard-event-kbd" grab="all" repeat="on" grabToggle="ctrl-ctrl"/>
		</input>
		<hostdev mode="subsystem" type="pci" managed="yes">
			<source>
				<address domain="0" bus="1" slot="0" function="0"/>
			</source>
		</hostdev>
		<hostdev mode="subsystem" type="pci" managed="yes">
			<source>
				<address domain="0" bus="1" slot="0" function="1"/>
			</source>
		</hostdev>
		<input type="tablet" bus="usb"/>
		<controller type="usb" model="qemu-xhci" ports="15"/>
		<controller type="pci" model="pcie-root"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<controller type="pci" model="pcie-root-port"/>
		<video>
			<model type="virtio"/>
		</video>
		<graphics type="spice" port="-1" tlsPort="-1" autoport="yes">
			<image compression="off"/>
		</graphics>
		<redirdev bus="usb" type="spicevmc"/>
		<redirdev bus="usb" type="spicevmc"/>
		<channel type="spicevmc">
			<target type="virtio" name="com.redhat.spice.0"/>
		</channel>
	</devices>
</domain>